{
  "name": "chopchop-client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "dev-docker": "docker run -p 80:80 --detach --name chopchop-client chopchop/client:0.1",
    "build": "tsc -b && vite build",
    "build-docker": "docker build ./ --tag chopchop/client:0.1",
    "lint": "cd ../.. && npm run lint -- packages/client",
    "lint:fix": "cd ../.. && npm run lint:fix -- packages/client",
    "format": "cd ../.. && npm run format -- packages/client",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.3"
  }
}
